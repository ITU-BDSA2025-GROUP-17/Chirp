@using Chirp.Repositories
@page "/{author}"
@model Chirp.Web.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
    int currentPage = 1;
    var pageQuery = Model.HttpContext.Request.Query["page"];
    if (!string.IsNullOrEmpty(pageQuery))
    {
        int.TryParse(pageQuery, out currentPage);
        if (currentPage < 1) currentPage = 1; 
    }
}

<div>
    <h2> @routeName's Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author.Name">@cheep.Author.Name</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
        <div class="pagination">
            @if (currentPage > 1)
            {
                <a href="/@routeName?page=@(currentPage - 1)">Prev</a>
            }
            <span>Page @currentPage</span>
            
            <a href="/@routeName?page=@(currentPage + 1)">Next</a>
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
